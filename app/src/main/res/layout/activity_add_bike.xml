<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1"
    tools:context=".Activities.ServicemanActivities.AddBikeActivity" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Dodaj rower"
        android:layout_margin="50dp"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/id_stacji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"

        android:inputType="numberDecimal"

        android:background="#30ffffff"
        android:drawableStart="@drawable/ic_baseline_local_parking_24"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="ID stacji"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/dostepnosc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_stacji"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:inputType="numberDecimal"
        android:drawableStart="@drawable/ic_baseline_event_available_24"
        android:drawablePadding="20dp"
        android:background="#30ffffff"
        android:hint="Dostepnosc (1/0)"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/stan_tech"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dostepnosc"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:drawableStart="@drawable/ic_baseline_home_repair_service_24"
        android:drawablePadding="20dp"
        android:background="#30ffffff"
        android:ems="10"
        android:hint="Stan techniczny"
        android:padding="20dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addBikeBtn"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_below="@+id/stan_tech"

        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:onClick="addBikeAndReturn"
        android:text="DODAJ"
        android:textAlignment="center"
        android:textSize="20dp" />



</RelativeLayout>