<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1"
    tools:context=".Activities.SelectedHireActivity">

    <TextView
        android:id="@+id/hireNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#30ffffff"
        android:text="Wypożyczenie nr. "
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="40dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="40dp"
        android:background="#30ffffff"
        android:id="@+id/hireInfoPane"
        android:layout_below="@+id/hireNumber">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/hireID">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ID:"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="10dp"
                android:layout_weight="0.5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/hireIdText"
                android:text="#35"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="10dp"
                android:layout_weight="0.5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/hireClient"
            android:layout_below="@+id/hireID">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ID Klienta:"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="10dp"
                android:layout_weight="0.5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/clientIDText"
                android:text="#16"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="10dp"
                android:layout_weight="0.5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/hireBikeID"
            android:layout_below="@id/hireClient">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ID Roweru:"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="10dp"
                android:layout_weight="0.5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bikeIDText"
                android:text="#4"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="10dp"
                android:layout_weight="0.5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/start"
            android:layout_below="@id/hireBikeID">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Data rozpoczęcia:"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="10dp"
                android:layout_weight="0.5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/startDateText"
                android:text="2023-05-14"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="10dp"
                android:layout_weight="0.5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/time"
            android:layout_below="@id/start">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Czas przejazdu:"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="10dp"
                android:layout_weight="0.5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/timeText"
                android:text="00:00:43"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="10dp"
                android:layout_weight="0.5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/distanceLayout"
            android:layout_below="@id/time">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Dystans:"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="10dp"
                android:layout_weight="0.5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/distanceText"
                android:text="546 m"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="10dp"
                android:layout_weight="0.5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/costLayout"
            android:layout_below="@id/distanceLayout">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Kwota:"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="10dp"
                android:layout_weight="0.5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/costText"
                android:text="4.48 zł"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="10dp"
                android:layout_weight="0.5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/isPaidLayout"
            android:layout_below="@id/costLayout">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Opłacone:"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="10dp"
                android:layout_weight="0.5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/isPaidText"
                android:text="opłacone"
                android:drawableLeft="@drawable/ic_baseline_check_24"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="10dp"
                android:layout_weight="0.5"/>
        </LinearLayout>

    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/regulatePaymentButton"
        android:layout_below="@id/hireInfoPane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="opłać"
        android:onClick="regulatePayment"/>

</RelativeLayout>